{
  "exclude": [
    "node_modules",
    "build",
    "vite.config",
  ],
  "compilerOptions": {
    "types": ["vite/client", "node"],// to resolve correctly import Logo.png for example
    "outDir": "build",
    "moduleResolution": "node",
    "isolatedModules": true,
    "target": "ES2020",
    "module": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": false,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "components": ["./src/components"],
      "components/*": ["src/components/*"],
      "utils": ["src/utils"],
      "utils/*": ["src/utils/*"],
      "views/*": ["src/views/*"],
      "assets/*": ["src/assets/*"],
      "services/*": ["src/services/*"],
      "hooks": ["src/hooks"],
      "constants/*": ["src/constants/*"],
      "stores": ["src/stores"],
      "configs/*": ["src/configs/*"],
    }
  },
}
